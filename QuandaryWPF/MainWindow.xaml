<Window x:Class="QuandaryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuandaryWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="Black" WindowStyle="None" BorderThickness="0" ResizeMode="NoResize">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="100" Margin="20,10,0,0" VerticalAlignment="Top" Width="100" >
            <TabItem Header="Configuration">
                <Grid Background="Black" Margin="0,0,0,52" RenderTransformOrigin="0.5,0.5" Height="0" VerticalAlignment="Bottom">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
